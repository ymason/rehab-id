<% if policy(@rate).new? %>

	<%= form_for @rate do |f| %>
		<%= f.label :room_feature %>
		<%= f.collection_select :room_feature, RoomFeature.where(current_user.rate.nil?), :id, :name, :prompt => "Select your rate for this room feature." %>
		<br>
		<%= f.label :price %>
		<%= f.number_field :price%>
		<br>
		<br>
		<%= f.submit "New Rate" %>
	<% end %>
<% end %>