<% if policy(current_user).new? %>
<h4><b> Tell Us About Your Lending Terms</b></h4>
	<%= form_for @lender_underwriting, url: lender_underwriting_path(current_user.id) do |f| %>
		<% if @lender_underwriting.errors.any? %>
			<%= form_errors_for @lender_underwriting %>
		<% end %>
		<div class="row">
			<div class="6u 12u(mobilep)">
				<h5> Name of Loan Type </h5>
				<%= f.text_field :name, placeholder: "i.e. 'High LTV Florida Loans'"%>
				<h5> Company Address </h5>
				<%= f.text_field :address%>
				<h5> City </h5>
				<%= f.text_field :city%>
				<h5> State </h5>
		    	<%= f.select :state, options_for_select(us_states) %>
				<h5> Zip Code </h5>
				<%= f.number_field :zip_code%>
			</div>

			<div class="2u 12u(mobilep)">
				<h5> Max LTV </h5>
				<%= f.number_field :ltv, placeholder: "%" %>
				<h5> Max ARV </h5>
				<%= f.number_field :arv, placeholder: "%"%>
				<h5> Min. Past Rehabs </h5>
				<%= f.number_field :experience, placeholder: "#"%>
				<h5> Interest Rate </h5>
				<%= f.number_field :interest_rate, placeholder: "%"%>
				<h5> Min. Loan Amount</h5>
				<%= f.number_field :loan_min, placeholder: "$"%>
				</div>
			<div class="2u 12u(mobilep)">
				<h5> Max Loan Amount </h5>
				<%= f.number_field :loan_max, placeholder: "$"%>
				<h5> Origination Fee </h5>
				<%= f.number_field :origination_fee, placeholder: "%"%>
				<h5> Length of Term</h5>
				<%= f.number_field :term, placeholder: "months"%>
				<h5> Max Underwriting Time</h5>
				<%= f.number_field :process_time, placeholder: "days"%>
				<h5> Pre-Payment Penalty</h5>
				<%= f.number_field :pre_payment, placeholder: "months"%>
			</div>

			<div class="2u 12u(mobilep)">
			<h4><em> If Lending For Rehab/Construction (Optional) </em> </h4>
				<h5> Max LTC </h5>
				<h6><em>(loan to construction budget)</em> </h6>
				<%= f.number_field :ltc, placeholder: "%"%>
				<h5> Max Amount of Draws</h5>
				<%= f.number_field :draws, placeholder: "#"%>
				<h5> Min. Draw Amount</h5>
				<%= f.number_field :min_draw, placeholder: "$"%>
				<h5> Min. Final Draw </h5>
				<h6><em>(holdback until rehab done)</em> </h6>
				<%= f.number_field :min_final_draw, placeholder: "%"%>
				<h5> Min. FICO Score</h5>
				<%= f.text_field :fico, placeholder: "#"%>
				<br>
				<%= f.submit "Create New Policy" %>
			</div>
		</div>
	<% end %>
<% end %>