<% if policy(@bid_project).edit? %>
	<h2> Schedule Inspections for <%= @bid_project.address %></h2>
	<i>Give us three different potential times for contractors to come inspect property.
	<h6>(They have 2 hours to complete inspection if time is selected so please plan ahead to have the property available.)</i></h6>
	<br>
		<div class="row">
			<div class="2u 12u(mobilep)">
			<%= form_for @bid, url: user_bids_path do |f| %>
				<h5> First Date </h5>
				<%= f.date_field :date1%>
				<h5> First Time </h5>
				<%= f.time_field :start_time1%>
		    	<h5> Second Date </h5>
				<%= f.date_field :date2%>
				<h5> Second Time </h5>
				<%= f.time_field :start_time2%>
		    	<h5> Third Date </h5>
				<%= f.date_field :date3%>
				<h5> Third  Time </h5>
				<%= f.time_field :start_time3%>
		    	</div>
		    	<div class="4u 12u(mobilep)">
				<h5> Contact Name </h5>
				<%= f.text_field :contact_name%>
				<h5> Contact Email </h5>
				<%= f.text_field :contact_email%>
				<h5> Contact Phone </h5>
				<%= f.text_field :contact_phone%>
				<h5> Instructions (i.e. Lockbox location) </h5>
				<%= f.text_area :instructions%>
				<br>
				<br>
		<%= f.submit "Schedule Inspections" %>
			</div>
		</div>
	<% end %>
<% end %>