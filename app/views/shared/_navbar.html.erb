<!--Header-->
<header class="stiky-header">
	<div class="container group">
		<% if user_signed_in? %>
		<span class="btn btn-primary btn-login"><%= link_to 'Logout', destroy_user_session_path(:authenticity_token => form_authenticity_token()), method: 'delete' %></span>
		<nav class="main-navi">
			<ul>
							<li><%= link_to 'Dashboard', dashboard_path%></li>
							<li><%= link_to 'Home', home_path%></li>
							<li><%= link_to 'Contact', contact_path%></li>
				<% else %>
		<span class="btn btn-primary btn-login"><%= link_to 'Login', new_user_session_path%></span>
		<nav class="main-navi">
							<li><%= link_to 'Home', home_path%></li>
							<li><%= link_to 'Contact', contact_path%></li>
							<li><%= link_to 'Sign Up', new_user_registration_path%></li>
							<li><%= link_to 'Login', new_user_session_path%></li>
				<% end %>
			</ul>
		</nav>
	</div>
</header>
